{% extends 'base.html.twig' %}
{% block body %}
<div class=" sm:mt-0 ">
    <div class="md:grid md:grid-cols-4 md:gap-6 md:mt-5">
      <div class="md:mt-0 md:col-start-2 col-end-4">
        <p class="block uppercase tracking-wide text-gray-700 text-s font-bold mb-2" style="">Nuevo Equipo</p>
      </div>
    </div>
    <div class="md:grid md:grid-cols-4 md:gap-6 md:mt-5">
    <div class="md:mt-0 md:col-start-2 col-end-4">
        {{ form_start(form, {'attr': {'id':'create-inventario'}}) }}
          <div class="shadow overflow-hidden sm:rounded-md ">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 ">
                    <label for="marca" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Marca</label>
                    {{ form_row(form.brand_inventory, {'attr':{ 'placeholder': 'Marca' , 'class': 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }}) }}
                </div>
                
                <div class="col-span-6">
                    <label for="modelo" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Modelo</label>
                    {{ form_row(form.model_inventory, {'attr':{ 'placeholder': 'Modelo' , 'class': 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }}) }}
                </div>
                <div class="col-span-6 sm:col-span-6 lg:col-span-3">
                    <label for="mac" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Direccion MAC</label>
                    {{ form_row(form.mac_inventory, {'attr':{ 'placeholder': 'Direccion mac' , 'class': 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }}) }}
                </div>
                <div class="col-span-6 sm:col-span-6 lg:col-span-3">
                    <label for="tipoEquipo" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Tipo de Equipo</label>
                    {{ form_row(form.type_inventory, {'attr':{ 'placeholder': 'Tipo de equipo' , 'class': 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }}) }}
                </div>
              </div>
            </div>
            <div class="px-4 py-3 bg-white text-right sm:px-6">
              <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Registar Equipo
              </button>
            </div>
          </div>
        {{ form_end(form) }}
       
      </div>
    </div>
  </div>
 
<script>
$('#create-inventario').on("submit",function(event) {
    dataform = new FormData(this);
    event.preventDefault();
    $.sweetModal.confirm('Confirmacion', 'Â¿Seguro de la edicion?', function() {
      $.ajax({
          type: 'POST',
          url: '{{ path('createInventario')}}',
          processData: false,
          contentType: false,
          data: dataform,
          dataType: 'json',
          success: function(response) {
              if(response.status == true){
                $.sweetModal({
                  content: response.msg,
                  icon: $.sweetModal.ICON_SUCCESS,   
                });
              }
              //$(".sweet-modal-close-link").click();
          },
      }); 
    }, function() {
      $.sweetModal({
        content: 'Se ha negado los cambios',
        icon: $.sweetModal.ICON_ERROR,
      });
      
    });
  
});
</script>
{% endblock %}