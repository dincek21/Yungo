{% extends 'base.html.twig' %}
{% block body %}

<div class=" sm:mt-0 ">
    <div class="md:grid md:grid-cols-4 md:gap-6 md:mt-5">
      <div class="md:mt-0 md:col-start-2 col-end-4">
        <p class="block uppercase tracking-wide text-gray-700 text-s font-bold mb-2" style="">Nuevo Ticket</p>
      </div>
    </div>
    <div class="md:grid md:grid-cols-4 md:gap-6 md:mt-5">
    <!--Form Style-->
    <div class="md:mt-0 md:col-start-2 col-end-4">
        <!--Form Action-->
      {{ form_start(form) }}
          <div class="shadow overflow-hidden sm:rounded-md ">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 ">
                    <label for="clientes" class="block text-sm font-medium text-gray-700">Cliente</label>
                    {{form_row(form.fkClient, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 leading-tight'}}) }}
                </div>
                <div class="col-span-6 ">
                    <label for="tipoProblema" class="block text-sm font-medium text-gray-700">Tipo de Problema</label>
                    {{form_row(form.type_ticket,  {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 leading-tight'}}) }}
                </div>
                <div class="col-span-6">
                    <label for="descripcion" class="block text-sm font-medium text-gray-700">Descripcion</label>
                    {{ form_row(form.desc_ticket, { 'attr': { 'class': 'appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 leading-tight' } } ) }}
                    </div>
                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <label for="estado" class="block text-sm font-medium text-gray-700">Estado</label>
                    {{ form_row(form.status_ticket, {'attr': { 'class': 'appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 leading-tight' }}) }}
                  </div>
              </div>
            </div>
            <div class="px-4 py-3 bg-white text-right sm:px-6">
              <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Registrar ticket
              </button>
            </div>
          </div>
      {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}