<script>
$('#form-address').on("submit",function(event) {
    dataform = new FormData(this);
    event.preventDefault();
    $.sweetModal.confirm('Confirmacion', 'Â¿Seguro de la edicion?', function() {
      $.ajax({
          type: 'POST',
          url: '{{ path('editClientesAddress',  {id: id})}}',
          processData: false,
          contentType: false,
          data: dataform,
          dataType: 'json',
          success: function(response) {
            if(response.status == true){
             
              $.sweetModal({
                  content: response.msg,
                  icon: $.sweetModal.ICON_SUCCESS, 
                  
              });
            }
          },
      }); 
    }, function() {
      $.sweetModal({
        content: 'Se ha negado los cambios',
        icon: $.sweetModal.ICON_ERROR,
      });
      
    });
  
});
</script>

