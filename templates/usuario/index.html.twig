{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}
<div id="app" class="sm:mt-0 px-6">
    <div class="md:grid md:grid-cols-6 md:gap-6 md:grid-rows-2 md:mt-5">

        <div class="md:mt-0 md:col-start-1 col-end-4">
            <p class="text-center mt-1 font-mono text-xl font-bold relative">Informacion de Perfil</p>
            <div class="shadow overflow-hidden sm:rounded-md">
                <div class="px-4 py-5 bg-white sm:p-6">
                    <div class="grid grid-cols-6 gap-6">
                        <div class="col-span-2">
                            <label for="nombre" class="block text-sm font-medium text-gray-700 bold">Nombre</label>
                            <p class="font-bold">{{name}}</p>
                        </div>

                        <div class="col-span-1 ">
                            <label for="edad" class="block text-sm font-medium text-gray-700 bold ">Edad:</label>
                            <p class="font-bold">{{age}}</p>
                        </div>

                        <div class="col-span-1 ">
                            <label for="genero" class="block text-sm font-medium text-gray-700 bold ">Genero:</label>
                            <p class="font-bold">{{gender}}</p>
                        </div>
                       
                        <div class="md:mt-0 md:col-start-1 col-end-4">
                            <div style="position:relative;">
                                <img id="imagen" src="{{ asset('img/' ~ picture) }}" class="rounded-lg bg-green-500 border-dotted border-4" style="display: inline-block;position: absolute; width: 200px;height: 200px;overflow: hidden;"/>
                                <svg onclick="ventana()" style="display: inline-block; position: relative; width: 200px; height: 200px;overflow: hidden;" class="position-absolute text-green-900 opacity-0 hover:opacity-50 rounded-lg bg-gray-300 flex items-center justify-center "  fill="none" viewBox="-18 0 60 24" stroke="currentColor">
                                    <path position="absolute" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                                </svg>
                            </div>
                        </div>
                        
                        <div class="col-span-3">
                            <label for="email" class="block text-sm font-medium text-gray-700 bold">Email:</label>
                            <p class="font-bold">{{email}}</p>
                        </div>

                        <div class="col-span-2">
                            <label for="rol" class="block text-sm font-medium text-gray-700 bold">Rol:</label>
                            <p class="font-bold">{{rol}}</p>
                        </div>
                            
                        </div>
                        
                        <div class="col-span-3 self-center justify-self-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>    

function ventana(){
        $.ajax({
                type: 'POST',
                url: '/usuario/editphoto',
                dataType: 'json',
                success: function(response) {
                            $.sweetModal({
                                title: 'Cambiar fotografia',
                                content: response.html

                            });
                }
            });
}
</script>
{% endblock %}
